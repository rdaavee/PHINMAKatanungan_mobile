<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/phinmaicon"
        android:label="PHINMAKatanungan"
        android:supportsRtl="true"
        android:theme="@style/Theme.PHINMAKatanungan_mobile"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Activities -->
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChooseRoleActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StudentSignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TeacherSignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

        <!-- WelcomeActivity -->
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Base.Theme.PHINMAKatanungan_mobile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
