<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/postUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

<!--                <de.hdodenhof.circleimageview.CircleImageView-->
<!--                    android:layout_width="13dp"-->
<!--                    android:layout_height="13dp"-->
<!--                    android:layout_marginEnd="5dp"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:src="@drawable/profile_icon" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Ranier"
                    android:textSize="7sp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:clickable="false"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="BSIT"
                    android:textColor="#FFFFFF"
                    android:textSize="5sp"
                    app:chipBackgroundColor="@color/chip_bg_color_bsit"
                    app:chipStrokeWidth=".1dp"
                    app:chipStartPadding="0dp"
                    app:chipEndPadding="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="10m"
                    android:textSize="5sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_question_container"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/postUserInfo"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Student Here!"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_primary"
                    android:fontFamily="@font/montserrat_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Lorem, ipsum dolor sit amet consectetur adipisicing elit. Optio et tenetur possimus. Reiciendis repellat autem nisi, nulla cum soluta consectetur vel deleniti facere atque nemo esse commodi! Commodi, tempora laudantium!"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ll_question_container"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:text="911"
                    android:textColor="@color/text_color_primary"
                    android:textSize="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    app:chipIcon="@drawable/like_icon"
                    app:chipIconSize="8dp"
                    app:iconStartPadding="5dp"
                    android:clickable="true"
                    app:chipStrokeWidth=".01dp"
                    app:chipStartPadding="0dp"
                    app:chipEndPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:text="911"
                    android:textColor="@color/text_color_primary"
                    android:textSize="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    app:chipIcon="@drawable/comment_icon"
                    app:chipIconSize="8dp"
                    app:iconStartPadding="5dp"
                    android:clickable="true"
                    app:chipStrokeWidth=".01dp"
                    app:chipStartPadding="0dp"
                    app:chipEndPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:text="911"
                    android:textColor="@color/text_color_primary"
                    android:textSize="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    app:chipIcon="@drawable/bookmark_icon_black"
                    app:chipIconSize="8dp"
                    app:iconStartPadding="5dp"
                    android:clickable="true"
                    app:chipStrokeWidth=".01dp"
                    app:chipStartPadding="0dp"
                    app:chipEndPadding="0dp" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>