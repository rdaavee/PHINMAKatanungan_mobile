    </style>

    <style name="CahsCustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/cahs_bg_color</item>
        <item name="android:textColor">@color/cahs_text_color</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CcjeCustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/ccje_bg_color</item>
        <item name="android:textColor">@color/ccje_text_color</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CelaCustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/cela_bg_color</item>
        <item name="android:textColor">@color/cela_text_color</item>
