<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="bottomNav_active" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="bottomNav_inactive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/checkbox_bg_color</item>
        <item name="colorSecondary">@color/checkbox_active_bg_color</item>
    </style>

    <style name="CiteCustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/cite_bg_color</item>
        <item name="android:textColor">@color/cite_text_color</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CeaCustomChip" parent="Widget.MaterialComponents.Chip.Filter">
